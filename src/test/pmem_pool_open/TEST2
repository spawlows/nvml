#
# src/test/pmem_pool_open/TEST2 -- unit test for pmem{trn,blk,log}_pool_open
#
export UNITTEST_NAME=pmem_pool_open/TEST2
export UNITTEST_NUM=2

# standard unit test setup
. ../unittest/unittest.sh

require_fs_type local

setup

rm -f $DIR/testfile1
truncate -s 2G $DIR/testfile1
#
# pass the same file multiple times
#	the first time the file is new, so the pool is created
#	(and the test program will report the first 4k changed)
#	the second time the file has a pool in it
#	(and the test program will report the first 4k didn't change)
#	the third time we pass the pool to the wrong pool_open function
#	(and the test program will report the pool_open function failed)
#
expect_normal_exit ./pmem_pool_open$EXESUFFIX\
	l:$DIR/testfile1 l:$DIR/testfile1 o:$DIR/testfile1
rm $DIR/testfile1

check

pass
